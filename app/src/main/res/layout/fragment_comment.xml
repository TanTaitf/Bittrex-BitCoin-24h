<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/layout_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_scrollFlags="scroll|enterAlways|snap">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fbutton="http://schemas.android.com/apk/res-auto"
                android:id="@+id/youtube_download_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/layout_view_Other"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/layout_title_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="2dp"
                            android:weightSum="3.5">

                            <ImageView
                                android:id="@+id/centerImage"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_main64"
                                android:layout_centerInParent="true" />

                            <TextView
                                android:id="@+id/txtTenVideo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="3dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:paddingLeft="10dp"
                                android:text="Welcome to the BitCoins 24h !"
                                android:textColor="#fdfdfd"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtLuotXem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="7dp"
                                android:layout_weight="0.5"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingLeft="10dp"
                                android:text="FREE Bitcoins and Top News !"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <!--*********show more**********-->

                            <LinearLayout
                                android:id="@+id/linear1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView

                                    android:id="@+id/show1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="8dp"
                                    android:drawableRight="@drawable/ic_arrowdown26"
                                    android:gravity="center"
                                    android:text="SHOW MORE"
                                    android:textColor="#fce72e"
                                    android:textSize="12dp"
                                    android:textStyle="bold"

                                    />


                            </LinearLayout>

                            <ScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/linear2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <!--*********weight**********-->

                                    <LinearLayout

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center"
                                        android:orientation="vertical">


                                        <TextView
                                            android:id="@+id/txtdicription"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal|center_vertical"
                                            android:layout_weight="1"
                                            android:textSize="14sp"
                                            android:gravity="left|right"
                                            android:text="BitCoin 24h is one of the larger crypto to crypto exchanges offerign a large number of trading pairs into bitcoin \nIncluding all the major cryptos such as darkcoin, nextcoin and litecoin
                                            \nWith plenty of cases of collapse and hacked exchanges in the industry, traders appreciate a platform provider that \nFrom BitCoin 24h Review - One Critical Issue You Need to Know About"
                                            android:singleLine="false"
                                            android:textColor="#fff"

                                            />


                                    </LinearLayout>
                                    <!--*********show less**********-->

                                    <LinearLayout
                                        android:id="@+id/showless"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="15dp"
                                        android:layout_marginTop="16dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView

                                            android:id="@+id/show2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawablePadding="8dp"
                                            android:gravity="center"
                                            android:text="SHOW LESS"
                                            android:textColor="#fce72e"
                                            android:drawableRight="@drawable/ic_arowup26"
                                            android:textSize="12dp"
                                            android:textStyle="bold"

                                            />


                                    </LinearLayout>


                                </LinearLayout>
                            </ScrollView>


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:orientation="vertical">

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="2dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <Button
                                        android:layout_width="230dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/greenhover"
                                        android:drawableLeft="@drawable/ic_mail_closed"
                                        android:drawablePadding="0dp"
                                        android:paddingLeft="30dp"
                                        android:paddingRight="20dp"
                                        android:text="Send Email"
                                        android:textColor="@color/white" />
                                    <Button
                                        android:layout_width="230dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/redhover"
                                        android:drawableLeft="@drawable/feedback"
                                        android:drawablePadding="0dp"
                                        android:paddingLeft="30dp"
                                        android:paddingRight="20dp"
                                        android:text="Feed back"
                                        android:textColor="@color/white" />

                                    <Button
                                        android:layout_width="230dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"

                                        android:layout_margin="5dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/yellow"
                                        android:drawableLeft="@drawable/favorites"
                                        android:drawablePadding="0dp"
                                        android:paddingLeft="30dp"
                                        android:paddingRight="20dp"
                                        android:text="Rating App"
                                        android:textColor="@color/white" />


                                    <Button
                                        android:id="@+id/FButtonDonateView"
                                        android:layout_width="230dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/blue_fill_hover"
                                        android:drawableLeft="@drawable/ic_more"
                                        android:drawablePadding="0dp"
                                        android:paddingLeft="30dp"
                                        android:paddingRight="20dp"
                                        android:text="Donate App"
                                        android:textColor="@color/white" />



                                    <!--<com.google.android.gms.ads.AdView-->
                                        <!--android:id="@+id/adView"-->
                                        <!--android:layout_width="wrap_content"-->
                                        <!--android:layout_height="wrap_content"-->
                                        <!--android:layout_alignParentBottom="true"-->
                                        <!--android:layout_centerHorizontal="true"-->
                                        <!--android:layout_gravity="center"-->
                                        <!--android:layout_marginTop="5dp"-->
                                        <!--ads:adSize="BANNER"-->
                                        <!--ads:adUnitId="ca-app-pub-6352050986417104/5669290894">-->
                                        <!---->
                                    <!--</com.google.android.gms.ads.AdView>-->


                                </LinearLayout>

                            </ScrollView>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </FrameLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>

